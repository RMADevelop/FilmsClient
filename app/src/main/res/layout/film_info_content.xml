<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/description_film_info"
        app:layout_constraintTop_toBottomOf="@+id/description_film_info"/>

    <android.support.v7.widget.CardView
        android:id="@+id/poster_film_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/posterr_film_info"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="100dp"/>
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/title_film_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="test_title"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/poster_film_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date_film_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="10/10/20/17"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@+id/title_film_info"
        app:layout_constraintTop_toBottomOf="@+id/title_film_info"/>


    <TextView
        android:id="@+id/description_film_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="test_description"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster_film_info"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/description_film_info"
        app:layout_constraintTop_toBottomOf="@+id/description_film_info"/>

    <ImageView
        android:id="@+id/rate_film_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_favourite_inactive"
        app:layout_constraintBottom_toBottomOf="@+id/favourite_film_info"

        app:layout_constraintLeft_toRightOf="@+id/favourite_film_info"
        app:layout_constraintRight_toLeftOf="@+id/later_film_info"
        app:layout_constraintTop_toTopOf="@+id/favourite_film_info"
        tools:layout_height="50dp"
        tools:layout_width="50dp"/>

    <ImageView
        android:id="@+id/favourite_film_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_rate_inactive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rate_film_info"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_height="50dp"
        tools:layout_width="50dp"/>

    <ImageView
        android:id="@+id/later_film_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_later"
        app:layout_constraintBottom_toBottomOf="@+id/rate_film_info"
        app:layout_constraintLeft_toRightOf="@+id/rate_film_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rate_film_info"
        tools:layout_height="50dp"
        tools:layout_width="50dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:background="@color/green"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/description_film_info"
        app:layout_constraintTop_toBottomOf="@+id/rate_film_info"/>

</android.support.constraint.ConstraintLayout>