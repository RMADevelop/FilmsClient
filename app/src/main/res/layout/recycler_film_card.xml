<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recycler_film_card_poster"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/recycler_film_card_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_film_card_poster"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/recycler_film_card_poster"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_film_card_poster"/>

    <TextView
        android:id="@+id/recycler_film_card_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/recycler_film_card_poster"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_film_card_poster"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_film_card_tittle"/>

</android.support.constraint.ConstraintLayout>