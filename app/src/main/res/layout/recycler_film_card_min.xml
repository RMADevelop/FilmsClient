<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/recycler_film_card_min_poster"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="150dp"
            tools:layout_width="150dp"/>

        <TextView
            android:background="@color/overlay"
            android:id="@+id/recycler_film_card_min_tittle"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:layout_width="0dp"
            android:maxHeight="50dp"
            android:layout_marginStart="4dp"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_film_card_min_poster"
            app:layout_constraintLeft_toLeftOf="@+id/recycler_film_card_min_poster"
            app:layout_constraintRight_toRightOf="@+id/recycler_film_card_min_poster" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>